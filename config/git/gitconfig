[include]
  path = .gitconfig.local
[pull]
  rebase = true
[rebase]
  # Support fixup and squash commits
  autoSquash = true
  # Stash dirty worktree
  autoStash = true
[push]
  default = simple
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[filter "claude-settings"]
  clean = jq 'del(.model)'
  smudge = cat
[filter "cursor-settings"]
  clean = jq --arg a pgsql.serverGroups --arg b pgsql.connections 'del(.[$a], .[$b])'
  smudge = cat
[filter "codex-config"]
  clean = ./bin/git-filter-codex-config
  smudge = cat
  required = true
[core]
  pager = less -F -X
  excludesfile = ~/.gitignoreglobal
  autocrlf = input
# [url "git@github.com:"]
#   insteadOf = https://github.com/
[init]
  defaultBranch = main
[rerere]
	enabled = 1
[credential "https://github.com"]
	helper =
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper =
	helper = !/opt/homebrew/bin/gh auth git-credential
