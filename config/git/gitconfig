[include]
  path = .gitconfig.local
[pull]
  rebase = true
[rebase]
  # Support fixup and squash commits
  autoSquash = true
  # Stash dirty worktree
  autoStash = true
[push]
  default = simple
  useForceIfIncludes = true
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[filter "claude-settings"]
  ; deprecated: moved to template+ignore
[filter "cursor-settings"]
  ; deprecated: moved to template+ignore
[core]
  pager = less -F -X
  excludesfile = ~/.gitignoreglobal
  autocrlf = input
  editor = nvim -c 'autocmd VimLeave * call system(\"printf \\\\033c\")'
# [url "git@github.com:"]
#   insteadOf = https://github.com/
[init]
  defaultBranch = main
[merge]
  conflictStyle = zdiff3
[rerere]
	enabled = 1
[credential "https://github.com"]
	helper =
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper =
	helper = !/opt/homebrew/bin/gh auth git-credential
[gtr "copy"]
	include = .env.local
	include = .envrc
	include = .claude/settings.local.json
	includeDirs = .venv
	includeDirs = node_modules
[gtr "editor"]
  default = nvim
[gtr "ai"]
	default = claude

