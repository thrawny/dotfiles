{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_DISABLE_NONESSENTIAL_TRAFFIC": "true"
  },
  "permissions": {
    "allow": [
      "Bash(golangci-lint run:*)",
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(go mod tidy)",
      "Bash(gh pr view:*)",
      "Bash(gh pr checks:*)",
      "Bash(tmux-dev-server-control:*)",
      "mcp__ide__getDiagnostics",
      "mcp__context7",
      "mcp__playwright",
      "mcp__linear__list_projects",
      "mcp__linear__list_users",
      "mcp__linear__list_teams",
      "mcp__linear__get_user",
      "mcp__linear__get_team",
      "mcp__linear__list_issue_statuses",
      "mcp__linear__list_issue_labels",
      "Fetch",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [],
    "defaultMode": "acceptEdits"
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/dotfiles/claude/hooks/bash_command.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/dotfiles/claude/hooks/autoformat.py"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "python ~/dotfiles/claude/status_line.py"
  },
  "feedbackSurveyState": {
    "lastShownTime": 1753970401047
  },
  "autoCompact": false
}