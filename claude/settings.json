{
  "permissions": {
    "allow": [
      "Bash(golangci-lint run:*)",
      "Bash(go build:*)",
      "Bash(go test:*)",
      "Bash(go mod tidy)",
      "Bash(gh pr view:*)",
      "Bash(gh pr checks:*)",
      "mcp__ide__getDiagnostics",
      "mcp__context7",
      "mcp__playwright"
    ],
    "deny": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/dotfiles/claude/hooks/bash_command.py"
          }
        ]
      }
    ]
  }
}