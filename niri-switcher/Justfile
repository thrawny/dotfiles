# niri-switcher task runner

# Default recipe - show available commands
default:
    @just --list

# Build with cargo (incremental) - uses nix develop for dependencies
build:
    nix develop path:../nix#niri-switcher-dev -c cargo build --release

# Build and run
run: build
    ./target/release/niri-switcher

# Build with nix (clean build)
nix:
    nix build path:../nix#niri-switcher

# Build with nix and copy to result
install:
    nix build path:../nix#niri-switcher -o result
